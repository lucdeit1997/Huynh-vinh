<%- include layout/header %>
    <div class="main-content">
        <div class="main-content-inner">
            <div class="container">
                <div class="row">
                    <div class="col-12 mt-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <form action="">
                                    
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="example-text-input-lg" class="col-form-label">Tên Khach Hang</label>
                                                    <input class="form-control form-control-lg" name="name" type="text" id="txtName">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="example-text-input-lg" class="col-form-label">Danh Mục</label>
                                                    <select class="form-control" name="category" id="txtCategory">
                                                       
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="example-text-input-lg" class="col-form-label">Giá</label>
                                                    <input class="form-control form-control-lg" name="price" type="number" id="txtPrice"
                                                        
                                                    >
                                                </div>
                                                <div class="form-group">
                                                    <label for="example-text-input-lg" class="col-form-label">Mô Tả</label>
                                                    <textarea class="form-control" name="description" rows="4" aria-label="With textarea" id="txtDescription">  
                                                        </textarea>
                                                </div>
                                            </div>

                                           

                                        <div class="row">
                                            <div class="col-sm-12">
                                                <button type="submit" class="btn btn-primary" style="margin:0 auto; display: block; padding: 10px 50px" > 
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include layout/footer %>